button[type="primary"][plain] {
  color: #fff;
  border: 1px solid #EEC900;
  background-image: linear-gradient(-45deg, #EEC900 0%, 	#FFD700 100%);
}

.button-hover[type="primary"][plain] {
  color: #fff;
  border-color: #FFD700;
  opacity: 0.6;
}

button[type="default"][plain] {

  color: #fff;
  border: 1px solid #fff;
  background-image: linear-gradient(-45deg, #3B3B3B 0%, #636363 100%);
}

.button-hover[type="default"][plain] {

  color: #fff;
  border-color: #636363;
  opacity: 0.6;
}

.click-search {
  display: inline-block;
  color: #586c94;
}
