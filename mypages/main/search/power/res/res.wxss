.page__hd {
  padding: 30rpx 35rpx;
  text-align: center;
  background-image: linear-gradient(to top, 	#EEC900 0%, 	#FFD700 100%);
  box-shadow: 0 10rpx 35rpx #dee1e8;
}


.page__title {
  color: #fff;
}

.page__desc {
  font-size: 13px;
  color: #f8f8f8;
}

.weui-media-box__thumb {
  height: 35px;
  width: 35px;
}

.button-sp-area {
  padding: 30rpx 35rpx;
}
