<view class="page__hd">
  <image class="weui-media-box__thumb" src="../../../res/core/room.png" />
  <view class="page__desc">部分教室可能会被临时安排，请以实际情况为准</view>
</view>
<view class="weui-panel__bd">
  <view wx:for="{{listData}}" wx:for-item="list" wx:key="index" class="weui-media-box weui-media-box_text">
    <view class="weui-media-box__title weui-media-box__title_in-text">
      教室：{{list.k_jsm}}
      <text class="weui-media-box__info">({{list.k_lx}})</text>
      <view class="weui-media-box__right">
        <text>{{list.k_wzs}}</text>个座位</view>
    </view>
  </view>
  <view class="button-sp-area">
    <button open-type="share" class="weui-btn" type="primary" plain="true">分享查询结果</button>
  </view>
</view>