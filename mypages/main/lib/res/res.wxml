<view class="page__hd">
  <image class="weui-media-box__thumb" src="../../../res/core/lib.png" />
  <view class="weui-media-box__title" style="font-size:40rpx;color:#fff;">{{key}} 的查找结果</view>
  <view class="page__desc">- 第 {{page}} 页 -</view>
</view>
<view class="weui-panel" wx:if="{{bookData}}">
  <view class="weui-panel__hd">查询结果</view>
    <view class="weui-panel__bd">
      <navigator url="detail/detail?linkid={{book.link}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{bookData}}" wx:key="*this" wx:for-item="book">
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          {{index + 1}}
        </view>
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title">{{book.sm}}</view>
          <view class="weui-media-box__desc">{{book.zz}} / {{book.yy}}</view>
          <view class="weui-media-box__desc">{{book.cbs}} / {{book.cbsj}}</view>
          <view class="weui-media-box__desc" style="font-weight:bold">索书号：{{book.ssh}}</view>
        </view>
      </navigator>
    </view>
</view>
<view class="button-sp-area">
  <button open-type="share" class="weui-btn" type="primary" plain="true">分享查询结果</button>
</view>
<view style="padding-bottom:500rpx;">
  <view class="page__desc" style="color:#999;text-align:center;" wx:if="{{!alert}}">下拉加载下一页...</view>
    <view class="page__desc" style="color:#999;text-align:center;" wx:else>已经是最后一页啦</view>
</view>