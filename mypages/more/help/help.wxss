.page__hd {
  padding: 30rpx 35rpx;
  text-align: center;
  background-image: linear-gradient(to top, 	#EEC900 0%, 	#FFD700 100%);
  box-shadow: 0 10rpx 35rpx #dee1e8;
}

.page__title {
  color: #fff;
}

.page__desc {
  font-size: 13px;
  color: #f8f8f8;
}

.weui-media-box__thumb {
  height: 35px;
  width: 35px;
}

.weui-center {
  text-align: center;
  padding-bottom: 10px;
}

.weui-article {
  padding: 20px 15px 0;
  font-size: 27rpx;
}

.weui-article__p {
  color: #333;
}

.button-sp-area {
  padding: 30rpx 35rpx;
}

button[type="primary"][plain] {
  color: #fff;
  border: 1px solid  #FFD700;
  background-image: linear-gradient(-45deg, #EEC950 0%, #FFD710 100%);
}


.button-hover[type="primary"][plain] {
  color: #fff;
  border-color: #FFD700;
  opacity: 0.6;
}

button[type="default"][plain] {
  color: #fff;
  border: 1px solid #dee1e8;
  background-image: linear-gradient(-45deg, #dee1e8 0%, #b2b2b2  100%);
}

.button-hover[type="default"][plain] {
  color: #fff;
  border-color: #b2b2b2;
  opacity: 0.6;
}
