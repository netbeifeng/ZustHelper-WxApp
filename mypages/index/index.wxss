  text-align: center;
  
}
.page__bd, .weui-panel {
  margin-top: 30rpx;
}

.page__hd {
  margin-top:-100rpx;
  padding: 20rpx 35rpx 0 35rpx;
}

.weui-footer {
  margin: 50rpx 0;
}
.weui-media-box_text .ss{
  margin-left:1rem; 
}
.weui-center {
  text-align: center;
}

.border-shadow {
  border: 1px #dee1e8 solid;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 35rpx #dee1e8;
}

.border-shadow .weui-panel__hd {
  padding: 15rpx 30rpx 15rpx;
  font-size: 15px;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.weui-panel__hd {
  color: #333;
  font-size: 15px;
  padding: 10px 15px;
}

.weui-panel__hd:after {
  left: 0px;
}

.border-shadow .weui-media-box__info {
  margin-top: 0;
  padding-bottom: 0;
}

.border-shadow .weui-media-box {
  padding: 30rpx;
}

.border-shadow .weui-media-box__hd_in-appmsg {
  height: auto;
  line-height: 0;
  font-size: 80rpx;
  font-weight: bolder;
  color: #F4A460;
  margin-left: -0.4rem;
  margin-right: -0.4rem;
}

.border-shadow .weui-media-box__thumb {
  height: 48px;
  width: 48px;
}

.weui-grid {
  padding: 10px 10px;
  color: #333;
  width: 25%;
}

.weui-grid__icon {
  width: 81rpx;
  height: 81rpx;
}

.weui-panel:before, .weui-panel:after, .weui-grids, .weui-grid {
  border: 0;
}

.weui-media-box__desc {
  display: inherit;
  line-height: 1.8;
  color: #555;
}

button[type="primary"][plain] {
  color: #fff;
  border: 1px solid  #FFD700;
  background-image: linear-gradient(-45deg, #EEC950 0%, #FFD710 100%);
}

.button-hover[type="primary"][plain] {
  color: #fff;
  border-color: #FFD700;
  opacity: 0.6;
}

button[type="default"][plain] {
  color: #fff;
  border: 1px solid #fff;
  background-image: linear-gradient(-45deg, #3B3B3B 0%, #636363 100%);
}

.button-hover[type="default"][plain] {
  color: #fff;
  border-color: #636363;
  opacity: 0.6;
}

.weui-cells__tips {
  padding-left: 0px;
}

.page__hd .weui-media-box__title {
  font-size: 30rpx;
}

.page__hd .weui-media-box__title_in-text {
  margin-bottom: 0;
}

.page__hd .weui-media-box__desc {
  font-size: 19rpx;
}

.page__hd .weui-panel__hd {
  font-size: 30rpx;
}

.text{
  text-align: center;
  font-size: 25rpx;
  margin-top: 10rpx;
  margin-bottom: -18rpx;
  color: #3B3B3B;
}
